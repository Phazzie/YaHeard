{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2017",
    "lib": ["es2017", "dom", "dom.iterable"]
  },
  "exclude": [
    "node_modules/**",
    "build/**",
    "dist/**",
    ".vercel/**"
  ]
}